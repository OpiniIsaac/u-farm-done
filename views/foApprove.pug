doctype html
head
  title All Bookings and Orders
  link(rel='stylesheet' href='css/registeredFarmerOne.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ' crossorigin='anonymous')

header
  h1 Products approval Page
section
  table
    thead
      tr
        th Famer Name
        th ward
        th Date
        th Unit Price
        th Quantity 
        th Method Of Payment
        th Directions
        th Method Of Delvery
        th Produce Type
        th Status
        th Action
    tbody
    if products.length
      each product in products
        tr
          td 
                  img.card-img-top(src=product.productimage, alt='Product 1')
                  br
                  h3 #{product.productName}

          td #{product.ward}
          td #{product.date}
          td #{product.unitPrice}
          td #{product.quantity}
          td #{product.payment}
          td #{product.delivery}
          td #{product.produceType}
          td #{product.status}
          td #{product.directions}
          td 
                      a.btn.btn-dark.btn-block(href="/edit_product/"+product._id.toString()) Inspect
script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
