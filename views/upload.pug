doctype html
head
  title Upload Produce and Products
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  // Bootstrap CSS
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
  link(rel="stylesheet", href="../public/css/upload.css")
  script(src="js/upload.js") 

.container
  .bg-image.d-flex.align-items-center
    form(name='register' onsubmit='return Validate();' action ='/uploadProducts' method ='post' enctype="multipart/form-data")
      .form-group
        label(for='productName') Product  Name:
        input#productName.form-control(type='text' name='productName')
        small#productNameError
      .form-group
        label(for='productimage') Upload Image :
        input#productimage.form-control(type='file' name='productimage')
        small#productimageError 
      .form-group
        label(for='ward') Ward:
        select#ward.form-control(name='ward')
          option(value='' name='ward') --select--
          option(value='Ward A' name='ward') Ward A
          option(value='Ward B' name='ward') Ward B
          option(value='Ward C' name='ward') Ward C
          option(value='Ward D' name='ward') Ward D
        small#wardError.form-text.text-danger
      .form-group
        label(for='date') Date:
        input#date.form-control(type='date' name='date')
        small#date
      .form-group
        label(for='unitPrice') Unit Price in Ugx:
        input#unitPrice.form-control(type='number' name='unitPrice')
        small#unitPriceError
      .form-group
        label(for='quantity') Quantity:
        input#quantity.form-control(type='number' name='quantity')
        small#quantityError
      .form-group
        label(for='payment') Mode of Payment:
        select#payment.form-control(name='payment')
          option(value='cash' name='payment') Cash
          option(value='mobile_money' name='payment') Mobile Money
          small#paymentError
      .form-group
        label(for='directions') Directions:
        textarea#directions.form-control(name='directions')
        small#directionsError
      .form-group
        label(for='phoneNumber') Phone Number:
        input#phoneNumber.form-control(name='phoneNumber')
        small#phoneNumber
      .form-group
        label(for='delivery') Mode of Delivery:
        select#delivery.form-control(name='delivery' )
          option(value='pick_up' name='delivery') Pick Up
          option(value='home_delivery' name='delivery') Home Delivery
        small#deliveryError
      .form-group
        label(for='produceType') Produce Type:
        select#produceType.form-control(name='produceType' )
          option(value='organic' name='produceType') Organic
          option(value='non_organic' name='produceType') Non-Organic
        small#produceTypeError
      button.btn.btn-success(type='submit') Upload
      button.btn.btn-secondary(type='reset') Reset
  // Bootstrap JS
  
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js')
