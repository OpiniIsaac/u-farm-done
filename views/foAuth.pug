doctype html
head
  title Create FO Authentication Details
  link(rel='stylesheet' href='css/aoAuth.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')

header
  h1 Create FO Authentication Details
main
  form#regForm(name='register' onsubmit='return Validate();'  method = 'POST' action = '/foSignup' )
    fieldset
      legend FO Information
      label(for='fullName') Full Name:
      input#fullName(type='text' name='fullName' placeholder='Enter your full name')
      small#fullNameError
      label(for=' uniqueId') Unique ID:
      input#uniqueId(type='text' name='uniqueId' placeholder='Enter your Unique ID')
      small#fullNameError
     
      
       .form-group
              label(for='status') Ward:
              select(type="text")#ward.form-control(name='ward')
               option(value="Ward A" name='ward') Ward A
               option(value="Ward B" name='ward') Ward B
               option(value="Ward C" name='ward') Ward C
               option(value="Ward D" name='ward') Ward D
      small#wardError
    
    fieldset
      legend Authentication Details
      label(for='username') Username:
      input#username(type='text' name='username' placeholder='Enter your username')
      small#usernameError
      label(for='password') Password:
      input#password(type='password' name='password' placeholder='Enter your password')
      small#passwordError
      label(for='confirmPassword') Confirm Password:
      input#confirmPassword(type='password' name='confirmPassword' placeholder='Enter confirm password')
      small#confirmPasswordError
    
    button(type='submit') Create Authentication Details
script(src='js/foAuth.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')

