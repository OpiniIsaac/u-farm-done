    script(src="js/login.js") 

  body 
    .form-modal
      .form-toggle
        button#login-toggle(onclick='toggleLogin()') log in
        button#signup-toggle(onclick='toggleSignup()') sign up
      #login-form
        form(name="login" action='/login' method='post')
          input(name='username' type='text', placeholder='Enter email or username' )
          input(name='password' type='password', placeholder='Enter password' )
          div.mb-3
           
          //-   select#role.form-select(name='role')
          //-     option(value='' name='role') --Log In As--
          //-     option(value='ao' name='role') Agricultural Officer
          //-     option(value='uf' name='role') Urban Farmer
          //-     option(value='fo' name='role') Farmer One
          //-     option(value='gp' name='role') General Public  
          button.btn.login(type='submit') login
        
         
      #signup-form
        form
          input(name='email' type='email', placeholder='Enter your email')
          input( name='username' type='text', placeholder='Choose username')
          input(name='password' type='password', placeholder='Create password')
          button.btn.signup(type='submit') create account
