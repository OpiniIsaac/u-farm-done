doctype html
head
  title AO Registration Form
  link(rel='stylesheet' href='css/aoRegistration.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ' crossorigin='anonymous')
  script(src="js/foregistration.js") 
  

header
  h1 AO Registration Form
form#regForm(name='register' action ='/registerUrbanFamer' method ='post'
 onsubmit='return Validate();')
  fieldset
    legend
      h1 Personal Details
    label(for='fullName') Full Name:
    input#fullName(type='text' name='fullName' placeholder='Enter your name')
    small#fullNameError
    br
    label(for='nin') NIN Number:
    input#nin(type='text' name='nin' placeholder='Enter your nin')
    small#ninError
    br
    label(for='phoneNumber') Phone Number:
    input#phoneNumber(type='text' name='phoneNumber' placeholder='Enter your phone number')
    small#phoneNumberError
    br
    label(for='gender') Gender:
    input#male(type='radio' name='gender' value='male')
    label(for='male') Male
    input#female(type='radio' name='gender' value='female')
    label(for='female') Female
    small#genderError
    br
    label(for='dateOfBirth') Date of Birth:
    input#dateOfBirth(type='date' name='dateOfBirth')
    small#dateOfBirthError
    br
    label(for='residenceType') Residence Type:
      select#residenceType(name='residenceType' type='text')
        option(value='') --Select--
        option(value='Own'  ) Own
        option(value='Rent' ) Rent
        option(value='Other' ) Other
    small#residenceTypeError
    br
  fieldset
    legend
      h1 Farm Details
    label(for='ward') Ward Represented:
    input#ward(type='text' name='ward' placeholder='Enter your ward')
    small#wardError
    br
    label(for='uniqueId') Unique FO Number:
    input#uniqueId(type='text' value='uniqueId')
    small#uniqueIdError
    button#generate-button.btn.btn-success.btn-block(type='button')
      | Generate Unique Id
    br
    label(for='activities') Activities Involved:
    textarea#activities(name='activities' placeholder='Enter your activities')
    small#activitiesError
    br
    label(for='directions') Directions to Home:
    textarea#directions(name='directions' placeholder='Enter your directions')
    small#directionsError
    br
    label(for='dateOfRegistration') Date of Registration:
    input#dateOfRegistration(type='date' name='dateOfRegistration')
    small#dateOfRegistrationError
    br
    label(for='periodOfStay') Period of Stay in Ward (in years):
    input#periodOfStay(type='number' name='periodOfStay' placeholder='Enter your period of stay in ward')
    small#periodOfStayError
    br
  button(type='submit') Submit
